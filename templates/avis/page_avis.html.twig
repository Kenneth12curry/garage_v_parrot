{% extends 'base.html.twig' %}

{% block title %} <title> Avis visiteurs </title> {% endblock %}


{% block container %}

  
<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/images/bg-8.jpg');" data-stellar-background-ratio="0.5">
  <div class="overlay"></div>
  <div class="container">
    <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
      <div class="col-md-9 ftco-animate pb-5">
          <p class="breadcrumbs"><span class="mr-2"><a href="{{path('app_home')}}">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Contact <i class="ion-ios-arrow-forward"></i></span></p>
        <h1 class="mb-3 bread">Votre avis  nous int√©resse !</h1>
      </div>
    </div>
  </div>
</section>



  
<section class="ftco-section contact-section">
  <div class="container">

    {% if message is defined %}
      <div id="dialog" title="Message">
          <p class="font-weight-bold">{{ message }}</p>
      </div>
    {% endif %}

    <div class="row d-flex mb-5 contact-info">
        <div class="col-md-12 block-9 mb-md-5">
            <form action="{{path('app_add_notice')}}" class="bg-light p-5" method="POST">
                <div class="form-group">
                    <input type="text" name="nomClient" class="form-control" placeholder="Votre Nom" required>
                </div>
                <div class="form-group">
                    <textarea name="commentaire" id="" cols="30" rows="7" class="form-control" placeholder="Commentaire" required></textarea>
                </div>
                <div class="form-group">
                    <input type="number" name="note" step="0.1" class="form-control" placeholder="Note sur 10" required>
                </div>
                <div class="form-group">
                    <button type="submit" name="btnSave" value="create" class="btn btn-danger py-2 px-5">Envoyer</button>
                </div>
            </form>
        </div>
    </div>
  </div>
</section>


{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var dialog = document.getElementById('dialog');
            if (dialog) {
                dialog.style.display = 'block';
            }
        });
    </script>
{% endblock %}



{% endblock container %}
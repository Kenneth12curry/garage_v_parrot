{% extends 'base.html.twig' %}

{% block title %} <title> Services </title> {% endblock %}


{% block container %}

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/images/bg_6.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
    <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
        <div class="col-md-9 ftco-animate pb-5">
            <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Services <i class="ion-ios-arrow-forward"></i></span></p>
        <h1 class="mb-3 bread">Nos Services</h1>
        </div>
    </div>
    </div>
</section>

<section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center mb-5">
                <div class="col-md-7 text-center heading-section ftco-animate">
                    <span class="subheading">Services</span>
                    <h2 class="mb-3">Nos derniers Services</h2>
                </div>
            </div>
            <div class="row">

                {% for data in datas %}
                <div class="col-md-3">
                    <div class="services services-2 w-100 text-center mb-2">
                        <div class="icon d-flex align-items-center justify-content-center"><span class="fas fa-tools"></span></div>
                        <div class="text w-100">
                        <h3 class="heading mb-2">{{data.nomService}}</h3>
                        <p>{{data.description}}</p>
                        <span class="badge bg-danger text-white">{{data.categorie}}</span>
                    </div>
                </div>
                </div>
                {% endfor %}

            </div>
                
        </div>
</section>
      
<section class="ftco-section ftco-intro" style="background-image: url(images/bg_6.jpg);">
    <div class="overlay"></div>
    <div class="container">
        <div class="row justify-content-end">
            <div class="col-md-6 heading-section heading-section-white ftco-animate">
                <h4 class="mb-3 text-white font-weight-bold">Notre garage offre les meilleurs services, n'hésitez pas à nous contacter !</h4>
            </div>
        </div>
    </div>
</section>

{% endblock %}
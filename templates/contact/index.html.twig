{% extends 'base.html.twig' %}

{% block title %} <title>Contact</title> {% endblock %}


{% block container %}
  
<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
      <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
        <div class="col-md-9 ftco-animate pb-5">
            <p class="breadcrumbs"><span class="mr-2"><a href="{{path('app_home')}}">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Contact <i class="ion-ios-arrow-forward"></i></span></p>
          <h1 class="mb-3 bread">Contactez-Nous</h1>
        </div>
      </div>
    </div>
  </section>

  <section class="ftco-section contact-section">
    <div class="container">
      <div class="row d-flex mb-5 contact-info">
          <div class="col-md-4">
              <div class="row mb-5">
                <div class="col-md-12">
                    <div class="border w-100 p-4 rounded mb-2 d-flex">
                        <div class="icon mr-3">
                            <span class="icon-map-o"></span>
                        </div>
                      <p><span>Adresse:</span> 198 West 21th Street, Suite 721 New York NY 10016</p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="border w-100 p-4 rounded mb-2 d-flex">
                        <div class="icon mr-3">
                            <span class="icon-mobile-phone"></span>
                        </div>
                      <p><span>Téléphone:</span> <a href="tel://1234567920">+ 1235 2355 98</a></p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="border w-100 p-4 rounded mb-2 d-flex">
                        <div class="icon mr-3">
                            <span class="icon-envelope-o"></span>
                        </div>
                      <p><span>Email:</span> <a href="mailto:info@yoursite.com">v_parrot@gmail.com</a></p>
                    </div>
                </div>
              </div>
        </div>
        <div class="col-md-8 block-9 mb-md-5">

          {% if message is defined %}
            <div id="dialog" title="Message">
                <p class="fw-bold">{{ message }}</p>
            </div>
          {% endif %}

          <form action="{{path('app_contact')}}" class="bg-light p-5 contact-form" method="POST">
              <div class="form-group">
                <input type="text" name="sujet" class="form-control border-light" placeholder="Sujet" required>
              </div>
              <div class="form-group">
                <input type="text" name="nom" class="form-control border-light" placeholder="Votre Nom" required>
              </div>
              <div class="form-group">
                  <input type="text"  name="prenom" class="form-control border-light" placeholder="Votre Prenom"  required>
              </div>
              <div class="form-group">
                <input type="email"  name="email" class="form-control border-light" placeholder="Votre Email"  required>
              </div>
              <div class="form-group">
                <input type="text"   name="tel" class="form-control border-light" placeholder="Votre Téléphone"  required>
              </div>
              <div class="form-group">
                <textarea name="message" id="" cols="30" rows="7" class="form-control border-light" placeholder="Message"  required></textarea>
              </div>
              <div class="form-group">
                <button type="submit" name="btnSave" value="create" class="btn btn-danger py-2 px-5">
                  <i class="fas fa-paper-plane"></i>
                  Envoyer
                </button>
              </div>
          </form>

        </div>
      </div>
    </div>
  </section>

{% endblock %}


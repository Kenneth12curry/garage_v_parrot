{% extends 'layout/layout.html.twig' %}

{% block title %} <title> Espace utilisateur </title>{% endblock %}


{% block container %}

<form class="d-flex flex-column align-items-center">
    <div class="card shadow m-5 w-50 fw-bold p-5 ml-5">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label ms-5">Jour</label>
            <select class="form-control w-75 ms-5" id="exampleInputEmail1" >
                <option>Lundi</option>
                <option>Mardi</option>
                <option>Mercredi</option>
                <option>Jeudi</option>
                <option>Vendredi</option>
                <option>Samedi</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label ms-5">Heure Ouverture</label>
            <input type="time" class="form-control w-75 ms-5" id="exampleInputPassword1">
        </div>

        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label ms-5">Heure Fermeture</label>
            <input type="time" class="form-control w-75 ms-5" id="exampleInputPassword1">
        </div>

        <button type="submit" class="btn btn-primary mt-2 w-75 ms-5"><i class="fas fa-save me-1"></i>Enregistrer</button>
    </div>
</form>

{% endblock container %}
{% extends 'layout/layout.html.twig' %}

{% block title %} <title> Espace utilisateur </title>{% endblock %}

{% block container %}

<h6 class="d-flex justify-content-center mt-3">Création de compte utilisateurs employés</h6>

{{ form_start(CompteUserForm, {'attr': {'class': 'd-flex flex-column align-items-center'}}) }}

<div class="card shadow m-5 w-50 fw-bold p-5 ml-5">

    {{ form_row(CompteUserForm.login) }}
    {{ form_row(CompteUserForm.password) }}
    {{ form_row(CompteUserForm.nom) }}
    {{ form_row(CompteUserForm.prenom) }}
    {{ form_row(CompteUserForm.adresse) }}
    {{ form_row(CompteUserForm.tel) }}
    {{ form_row(CompteUserForm.photo) }}

    <button class="btn bg-gradient-dark w-100 fw-bolder float-end mt-4"><i class="fas fa-save me-1"></i>Enregistrer</button>

</div>
   
{{ form_end(CompteUserForm) }}

{% endblock container %}
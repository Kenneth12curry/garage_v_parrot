{% extends 'layout/layout.html.twig' %}

{% block title %} <title> Espace utilisateur </title>{% endblock %}


{% block container %}


{% if errors is not empty %}

<div class="">

    <div class="alert alert-danger text-white font-weight-bold">
        <ul>
            {% for error in errors %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
    </div>

</div>
    
{% endif %}


<form action="{{path('app_add_avis')}}" class="d-flex flex-column align-items-center" method="POST">

    <div class="card shadow m-5 w-50 fw-bold p-5 ml-5">

            <div class="mb-3">
                <input type="text" name="nomClient" class="form-control w-75 ms-5" id="exampleInputEmail" placeholder="nom du client">
            </div>

            <div class="mb-3">
                <input name="note" type="number" step="0.1" class="form-control w-75 ms-5" id="exampleInput" placeholder="un avis sur /10">
            </div>

            <div class="mb-3">
                <textarea  name="commentaire" class="form-control w-75 ms-5" id="exampleInputPassword1" placeholder="Commentaire"></textarea>
            </div>

            <div class="mb-3">
                <select name="etat" class="form-control w-75 ms-5" id="exampleInput">
                    <option>Etat</option>
                    <option value="accepté">Accepté</option>
                </select>
            </div>

        <button type="submit" name="btnSave" value="create" class="btn bg-gradient-secondary mt-2 w-75 ms-5"><i class="fas fa-save me-1"></i>Enregistrer</button>

    </div>

</form>

{% endblock container %}